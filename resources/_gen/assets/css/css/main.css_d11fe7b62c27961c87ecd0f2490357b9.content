body{margin:0;padding:0;background-color:#556b2f;overflow-x:hidden}.car{opacity:0;transition:all .3s ease}.car.fade-in{opacity:1}.car1{grid-area:car1;opacity:1}.info1{grid-area:info1}.car2{grid-area:car2}.info2{grid-area:info2}.car3{grid-area:car3}.info3{grid-area:info3;height:100%}.info1,.info2,.info3{display:grid;color:#006400;align-content:center;justify-content:center;background-color:coral;height:50vh;width:100vw;position:relative}.car1,.car2,.car3{height:50vh;width:100vw;position:relative;object-fit:cover}img.hero{width:100%;height:100%;object-fit:cover;overflow:hidden}.hero{width:100vw;display:grid;grid-template-areas:"car1" "info1" "car2" "info2" "car3" "info3"}@media(min-width:500px){.hero{grid-template-columns:50% 50%;grid-template-rows:100% 100%;grid-template-areas:"car1  info1" "car2  info2" "car3  info3"}nav ul{display:flex;justify-content:space-between}.car1,.car2,.car3{height:100vh;width:50vw;object-fit:fill}.info1,.info2,.info3{height:100vh;width:50vw}}